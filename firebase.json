{
  "functions": { "source": "functions", "runtime": "nodejs20" },
  "hosting": {
    "public": "public",
    "site": "tale-of-heros-staging",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/api/**", "function": "api" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
